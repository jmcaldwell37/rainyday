<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Membership #<%= @membership.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/memberships" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link membership start -->
      <div class="col">
        <a href="/memberships/<%= @membership.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit membership
        </a>
      </div>
      <!-- Edit link membership end -->

      <!-- Delete link membership start -->
      <div class="col">
        <a href="/delete_membership/<%= @membership.id %>" class="btn btn-block btn-outline-secondary">
          Delete membership
        </a>
      </div>
      <!-- Delete link membership end -->
    </div>

    <dl>
      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @membership.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Cause
      </dt>
      <!-- Display cause_id start -->
      <dd>
        <%= @membership.cause_id %>
      </dd>
      <!-- Display cause_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@membership.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@membership.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
