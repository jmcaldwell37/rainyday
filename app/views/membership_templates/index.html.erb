<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All memberships
    </h1>

    <a href="/memberships/new" class="btn btn-block btn-outline-secondary">
      Add a new membership
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "membership_templates/memberships_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Cause
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @memberships.each do |membership| %>
      <tr>
        <td>
          <%= membership.id %>
        </td>

        <td>
          <% if membership.user.present? %>
            <a href="/users/<%= membership.user.id %>">
              <%= membership.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if membership.cause.present? %>
            <a href="/causes/<%= membership.cause.id %>">
              <%= membership.cause.description %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(membership.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(membership.updated_at) %> ago
        </td>

        <td>
          <a href="/memberships/<%= membership.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @memberships, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
