<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Goal #<%= @goal.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/goals" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @goal.user %>
          <a href="/goals/<%= @goal.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit goal
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @goal.user %>
          <a href="/delete_goal/<%= @goal.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete goal
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @goal.user.present? %>
          <a href="/users/<%= @goal.user_id %>">
            <%= @goal.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @goal.description %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @goal.name %>
      </dd>

      <dt>
        D or s
      </dt>
      <dd>
        <%= @goal.d_or_s %>
      </dd>

      <dt>
        Goal amount
      </dt>
      <dd>
        <%= @goal.goal_amount %>
      </dd>

      <dt>
        Current amount
      </dt>
      <dd>
        <%= @goal.current_amount %>
      </dd>

      <dt>
        Deadline
      </dt>
      <dd>
        <%= @goal.deadline %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@goal.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@goal.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "goal_templates/goal_customized_preferences" %>
  </div>
</div>
