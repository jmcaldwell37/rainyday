<!-- Validation failure messages -->
<% if @goal.present? %>
  <% if @goal.errors.any? %>
    <% @goal.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new goal
</h1>


<hr>

<!-- Form goal start -->
<form action="/create_goal" method="post">
<!-- Form goal end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @goal.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @goal.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @goal.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for d_or_s start -->
  <div class="form-check">
    <input type="hidden" value="0" name="d_or_s">
    <!-- Input for d_or_s start -->
    <input id="d_or_s" class="form-check-input" name="d_or_s" type="checkbox" <%= "checked" if @goal.d_or_s %>>
    <!-- Input for d_or_s end -->
    <label for="d_or_s" class="form-check-label">
      D or s
    </label>
  </div>

  <!-- Label and input for goal_amount start -->
  <div class="form-group">
    <label for="goal_amount">
      Goal amount
    </label>

    <!-- Input for goal_amount start -->
    <input type="text" id="goal_amount" name="goal_amount" class="form-control" value="<%= @goal.goal_amount %>">
    <!-- Input for goal_amount end -->
  </div>
  <!-- Label and input for goal_amount end -->

  <!-- Label and input for current_amount start -->
  <div class="form-group">
    <label for="current_amount">
      Current amount
    </label>

    <!-- Input for current_amount start -->
    <input type="text" id="current_amount" name="current_amount" class="form-control" value="<%= @goal.current_amount %>">
    <!-- Input for current_amount end -->
  </div>
  <!-- Label and input for current_amount end -->

  <!-- Label and input for deadline start -->
  <div class="form-group">
    <label for="deadline">
      Deadline
    </label>

    <!-- Input for deadline start -->
    <input type="text" id="deadline" name="deadline" class="form-control" value="<%= @goal.deadline %>">
    <!-- Input for deadline end -->
  </div>
  <!-- Label and input for deadline end -->

  <button class="btn btn-block btn-outline-secondary">
    Create goal
  </button>
</form>

<hr>

<a href="/goals">
  Go back
</a>
