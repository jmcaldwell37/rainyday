<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Customized Preferences

    <a data-toggle="collapse" href="#goal_customized_preferences_new_form">
      Add customized preference
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @goal.customized_preferences.each do |customized_preference| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/customized_preferences/<%= customized_preference.id %>">
          <%= customized_preference.event_id %>
        </a>

        <a href="/delete_customized_preference_from_goal/<%= customized_preference.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="goal_customized_preferences_new_form">
        <%= render partial: "goal_templates/goal_customized_preferences_new_form" %>
      </div>
    </div>

  </ul>
</div>
