<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All goals
    </h1>

    <a href="/goals/new" class="btn btn-block btn-outline-secondary">
      Add a new goal
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Description
        </th>

        <th>
          Name
        </th>

        <th>
          D or s
        </th>

        <th>
          Goal amount
        </th>

        <th>
          Current amount
        </th>

        <th>
          Deadline
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @goals.each do |goal| %>
      <tr>
        <!-- Display goal.id start -->
        <td>
          <%= goal.id %>
        </td>
        <!-- Display goal.id end -->

        <!-- Display goal.user_id start -->
        <td>
          <%= goal.user.email %>
        </td>
        <!-- Display goal.user_id end -->

        <!-- Display goal.description start -->
        <td>
          <%= goal.description %>
        </td>
        <!-- Display goal.description end -->

        <!-- Display goal.name start -->
        <td>
          <%= goal.name %>
        </td>
        <!-- Display goal.name end -->

        <!-- Display goal.d_or_s start -->
        <td>
          <%= goal.d_or_s %>
        </td>
        <!-- Display goal.d_or_s end -->

        <!-- Display goal.goal_amount start -->
        <td>
          <%= goal.goal_amount %>
        </td>
        <!-- Display goal.goal_amount end -->

        <!-- Display goal.current_amount start -->
        <td>
          <%= goal.current_amount %>
        </td>
        <!-- Display goal.current_amount end -->

        <!-- Display goal.deadline start -->
        <td>
          <%= goal.deadline %>
        </td>
        <!-- Display goal.deadline end -->

        <!-- Display goal.created_at start -->
        <td>
          <%= time_ago_in_words(goal.created_at) %> ago
        </td>
        <!-- Display goal.created_at end -->

        <!-- Display goal.updated_at start -->
        <td>
          <%= time_ago_in_words(goal.updated_at) %> ago
        </td>
        <!-- Display goal.updated_at end -->

        <td>
          <a href="/goals/<%= goal.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
