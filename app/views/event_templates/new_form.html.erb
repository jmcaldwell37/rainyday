<h1>
  Add a new event
</h1>


<hr>

<!-- Form event start -->
<form action="/create_event" method="post">
<!-- Form event end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for logic start -->
  <div class="form-group">
    <label for="logic">
      Logic
    </label>

    <!-- Input for logic start -->
    <input type="text" id="logic" name="logic" class="form-control">
    <!-- Input for logic end -->
  </div>
  <!-- Label and input for logic end -->

  <!-- Label and input for frequency start -->
  <div class="form-group">
    <label for="frequency">
      Frequency
    </label>

    <!-- Input for frequency start -->
    <input type="text" id="frequency" name="frequency" class="form-control">
    <!-- Input for frequency end -->
  </div>
  <!-- Label and input for frequency end -->

  <!-- Label and input for suggested_amount start -->
  <div class="form-group">
    <label for="suggested_amount">
      Suggested amount
    </label>

    <!-- Input for suggested_amount start -->
    <input type="text" id="suggested_amount" name="suggested_amount" class="form-control">
    <!-- Input for suggested_amount end -->
  </div>
  <!-- Label and input for suggested_amount end -->

  <button class="btn btn-block btn-outline-secondary">
    Create event
  </button>
</form>

<hr>

<a href="/events">
  Go back
</a>
