<!-- Validation failure messages -->
<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit event #<%= @event.id %>
</h1>

<hr>

<!-- Form event start -->
<form action="/update_event/<%= @event.id %>" method="post">
<!-- Form event end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @event.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @event.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for logic start -->
  <div class="form-group">
    <label for="logic">
      Logic
    </label>

    <!-- Input for logic start -->
    <input type="text" id="logic" name="logic" class="form-control" value="<%= @event.logic %>">
    <!-- Input for logic end -->
  </div>
  <!-- Label and input for logic end -->

  <!-- Label and input for frequency start -->
  <div class="form-group">
    <label for="frequency">
      Frequency
    </label>

    <!-- Input for frequency start -->
    <input type="text" id="frequency" name="frequency" class="form-control" value="<%= @event.frequency %>">
    <!-- Input for frequency end -->
  </div>
  <!-- Label and input for frequency end -->

  <!-- Label and input for suggested_amount start -->
  <div class="form-group">
    <label for="suggested_amount">
      Suggested amount
    </label>

    <!-- Input for suggested_amount start -->
    <input type="text" id="suggested_amount" name="suggested_amount" class="form-control" value="<%= @event.suggested_amount %>">
    <!-- Input for suggested_amount end -->
  </div>
  <!-- Label and input for suggested_amount end -->

  <button class="btn btn-block btn-outline-secondary">
    Update event
  </button>
</form>

<hr>

<a href="/events">
  Go back
</a>
