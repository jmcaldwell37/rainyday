<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Customized Preferences

    <a data-toggle="collapse" href="#event_customized_preferences_new_form">
      Add customized preference
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.customized_preferences.each do |customized_preference| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/customized_preferences/<%= customized_preference.id %>">
          <%= customized_preference.event_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_customized_preference_from_event/<%= customized_preference.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_customized_preferences_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
