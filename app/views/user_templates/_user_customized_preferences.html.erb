<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Customized Preferences

    <a data-toggle="collapse" href="#user_customized_preferences_new_form">
      Add customized preference
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.customized_preferences.each do |customized_preference| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/customized_preferences/<%= customized_preference.id %>">
          <%= customized_preference.event_id %>
        </a>
        <!-- Show link end -->

      </li>
    <% end %>

  </ul>
</div>
