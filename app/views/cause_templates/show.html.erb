<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Cause #<%= @cause.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/causes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link cause start -->
      <div class="col">
        <a href="/causes/<%= @cause.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit cause
        </a>
      </div>
      <!-- Edit link cause end -->

      <!-- Delete link cause start -->
      <div class="col">
        <a href="/delete_cause/<%= @cause.id %>" class="btn btn-block btn-outline-secondary">
          Delete cause
        </a>
      </div>
      <!-- Delete link cause end -->
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <!-- Display description start -->
      <dd>
        <%= @cause.description %>
      </dd>
      <!-- Display description end -->

      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @cause.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Goal amount
      </dt>
      <!-- Display goal_amount start -->
      <dd>
        <%= @cause.goal_amount %>
      </dd>
      <!-- Display goal_amount end -->

      <dt>
        Current amount
      </dt>
      <!-- Display current_amount start -->
      <dd>
        <%= @cause.current_amount %>
      </dd>
      <!-- Display current_amount end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@cause.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@cause.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "cause_templates/cause_memberships" %>
  </div>
</div>
<!-- Show Page Customization end -->
