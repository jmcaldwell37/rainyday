<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Memberships

    <a data-toggle="collapse" href="#cause_memberships_new_form">
      Add membership
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @cause.memberships.each do |membership| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/memberships/<%= membership.id %>">
          <%= membership.user_id %>
        </a>

        <a href="/delete_membership_from_cause/<%= membership.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="cause_memberships_new_form">
        <%= render partial: "cause_templates/cause_memberships_new_form" %>
      </div>
    </div>

  </ul>
</div>
