<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All causes
    </h1>

    <a href="/causes/new" class="btn btn-block btn-outline-secondary">
      Add a new cause
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Name
        </th>

        <th>
          Goal amount
        </th>

        <th>
          Current amount
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @causes.each do |cause| %>
      <tr>
        <!-- Display cause.id start -->
        <td>
          <%= cause.id %>
        </td>
        <!-- Display cause.id end -->

        <!-- Display cause.description start -->
        <td>
          <%= cause.description %>
        </td>
        <!-- Display cause.description end -->

        <!-- Display cause.name start -->
        <td>
          <%= cause.name %>
        </td>
        <!-- Display cause.name end -->

        <!-- Display cause.goal_amount start -->
        <td>
          <%= cause.goal_amount %>
        </td>
        <!-- Display cause.goal_amount end -->

        <!-- Display cause.current_amount start -->
        <td>
          <%= cause.current_amount %>
        </td>
        <!-- Display cause.current_amount end -->

        <!-- Display cause.created_at start -->
        <td>
          <%= time_ago_in_words(cause.created_at) %> ago
        </td>
        <!-- Display cause.created_at end -->

        <!-- Display cause.updated_at start -->
        <td>
          <%= time_ago_in_words(cause.updated_at) %> ago
        </td>
        <!-- Display cause.updated_at end -->

        <td>
          <a href="/causes/<%= cause.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @causes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
