<h1>
  Add a new cause
</h1>


<hr>

<!-- Form cause start -->
<form action="/create_cause" method="post">
<!-- Form cause end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for goal_amount start -->
  <div class="form-group">
    <label for="goal_amount">
      Goal amount
    </label>

    <!-- Input for goal_amount start -->
    <input type="text" id="goal_amount" name="goal_amount" class="form-control">
    <!-- Input for goal_amount end -->
  </div>
  <!-- Label and input for goal_amount end -->

  <!-- Label and input for current_amount start -->
  <div class="form-group">
    <label for="current_amount">
      Current amount
    </label>

    <!-- Input for current_amount start -->
    <input type="text" id="current_amount" name="current_amount" class="form-control">
    <!-- Input for current_amount end -->
  </div>
  <!-- Label and input for current_amount end -->

  <button class="btn btn-block btn-outline-secondary">
    Create cause
  </button>
</form>

<hr>

<a href="/causes">
  Go back
</a>
