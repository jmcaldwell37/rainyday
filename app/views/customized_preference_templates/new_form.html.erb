<h1>
  Add a new customized preference
</h1>


<hr>

<form action="/create_customized_preference" method="post">

  <div class="form-group">
    <label for="event_id">
      Event
    </label>

    <%= select_tag(:event_id, options_from_collection_for_select(Event.all, :id, :name, @customized_preference.event_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @customized_preference.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="transaction_amount">
      Transaction amount
    </label>

    <input type="text" id="transaction_amount" name="transaction_amount" class="form-control">
  </div>

  <div class="form-group">
    <label for="goal_id">
      Goal
    </label>

    <%= select_tag(:goal_id, options_from_collection_for_select(Goal.all, :id, :user_id, @customized_preference.goal_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create customized preference
  </button>
</form>

<hr>

<a href="/customized_preferences">
  Go back
</a>
